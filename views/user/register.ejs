  <!-- front end validation -->
  <script>
    const form = document.querySelector("#loginForm")
    form.addEventListener("submit", (event) => {
        event.preventDefault();
        if (form.checkValidity() === false) {
            form.classList.add("was-validated")
        } else if (!customValidity()) {
            return;
        } 
        else {
            form.submit()
        }
    }, false)

    function customValidity() {
        const password = document.getElementById("password")
        const confirmPassword = document.getElementById("c-password")
        const mobile = document.getElementById("mobile")
          if (password.value.length < 6) {
            password.classList.add("is-invalid");
            password.nextElementSibling.style.display = "block";
            return false;
          } 
          if (confirmPassword.value.length < 6) {
            confirmPassword.classList.add("is-invalid");
            confirmPassword.nextElementSibling.style.display = "block";
            return false;
          } 
          if (mobile.value.length < 10 || mobile.value.length >10) {
            mobile.classList.add("is-invalid");
            mobile.nextElementSibling.style.display = "block";
            return false;
          } 

        return true;
    }
  </script>


